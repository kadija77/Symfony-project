{% extends "base.html.twig" %}
{% block body %}
{{ parent() }}
<a class="btn btn-dark" href="{{path('crudCategorie',{'categorie_code' : 0,'statut' : 'add'})}}">ADD</a>
<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Nom</th>
      <th scope="col">Coefficient</th>
      <th scope="col">operation</th>
    </tr>
  </thead>
  <tbody>
    {% for p in categorie %}
    <tr>
        <th>{{p.getId()}}</th>
        <td>{{p.getNom()}}</td>
        <td>{{p.getCoefficient()}}</td>
        <td>
            <a href="{{path('crudCategorie',{'categorie_code' : p.getId(),'statut' : 'edit'})}}" class="btn btn-success">edit</a>
            <a href="{{path('crudCategorie',{'categorie_code' : p.getId(),'statut' : 'delete'})}}" class="btn btn-danger">delete</a>
        </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}